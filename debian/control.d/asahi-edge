Package: linux-asahi-edge${variant:suffix}
Architecture: arm64
Section: kernel
Provides: ${test:provides-full-asahi-edge} ${test:provides-full-preferred}
Depends: ${misc:Depends}, linux-image-asahi-edge${variant:suffix} (= ${binary:Version}), linux-headers-asahi-edge${variant:suffix} (= ${binary:Version})
